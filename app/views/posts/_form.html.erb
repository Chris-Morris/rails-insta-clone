<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-control">
    <div>
      <%= form.label :title, style: "display: block", class: "form-label" %>
      <%= form.text_field :title %>
    </div>

    <div>
      <%= form.label :image, style: "display: block", class: "form-label" %>
      <%= form.text_field :image %>
    </div>

    <div>
      <%= form.label :likes, style: "display: block", class: "form-label" %>
      <%= form.number_field :likes %>
    </div>

    <div>
      <%= form.label :comment_count, style: "display: block", class: "form-label" %>
      <%= form.number_field :comment_count %>
    </div>

    <div>
      <%= form.label :comments, style: "display: block", class: "form-label" %>
      <%= form.text_area :comments %>
    </div>

    <div>
      <%= form.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>